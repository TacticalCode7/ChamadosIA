@{
    ViewData["Title"] = "Estat√≠sticas do T√©cnico";
}

<link rel="stylesheet" href="~/css/site.css" />

<style>
    .dashboard-container {
        max-width: 900px;
        margin: 40px auto;
        background: linear-gradient(to right, #6dd5ed, #2193b0);
        border-radius: 12px;
        padding: 30px;
        color: white;
        box-shadow: 0 0 15px rgba(0,0,0,0.4);
    }

    .dashboard-container h2 {
        text-align: center;
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 30px;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .stat-card {
        background-color: rgba(0,0,0,0.3);
        border-radius: 10px;
        padding: 20px;
        text-align: center;
    }

    .stat-card h4 {
        font-size: 1.2rem;
        margin-bottom: 10px;
    }

    .stat-card p {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .filter-section {
        margin-top: 40px;
    }

    .filter-section select {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        font-size: 1rem;
        margin-bottom: 20px;
    }

    .chamado-card {
        background-color: rgba(0,0,0,0.2);
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 15px;
    }

    footer {
        margin-top: 40px;
        text-align: center;
        font-size: 0.85rem;
        color: #eee;
    }
</style>

<div class="dashboard-container">
    <h2>üìä Estat√≠sticas do T√©cnico</h2>

    <div class="stats-grid">
        <div class="stat-card">
            <h4>Chamados Atendidos</h4>
            <p>12</p>
        </div>
        <div class="stat-card">
            <h4>Chamados em Atendimento</h4>
            <p>3</p>
        </div>
        <div class="stat-card">
            <h4>Tempo M√©dio</h4>
            <p>45 min</p>
        </div>
        <div class="stat-card">
            <h4>Chamados Resolvidos</h4>
            <p>8</p>
        </div>
    </div>

    <div class="filter-section">
        <h4>üîù Filtrar Chamados por Status</h4>
        <form method="get" asp-action="Estatisticas">
            <select name="status">
                <option value="">Todos</option>
                <option value="EmAberto">Em Aberto</option>
                <option value="EmAtendimento">Em Atendimento</option>
                <option value="Resolvido">Resolvido</option>
                <option value="Fechado">Fechado</option>
            </select>
            <button type="submit" class="btn btn-light w-100">Aplicar Filtro</button>
        </form>

        <div class="mt-4">
    @if (ViewBag.Chamados != null)
    {
        foreach (var chamado in (List<ChamadosIA.Models.Chamado>)ViewBag.Chamados)
        {
            <div class="chamado-card">
                <h5>Chamado #@chamado.ID_Chamado - @chamado.Titulo</h5>
                <p>Status: @chamado.Status</p>
                <p>Cliente: @chamado.ClienteEmail</p>
                @if (!string.IsNullOrEmpty(chamado.Solucao))
                {
                    <p><strong>Solu√ß√£o:</strong> @chamado.Solucao</p>
                }
            </div>
        }
    }
    else
    {
        <p>Nenhum chamado encontrado.</p>
    }
</div>
    </div>

    <footer>
        Este site √© seguro e foi desenvolvido pela equipe do CATI.
    </footer>
</div>