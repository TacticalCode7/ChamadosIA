@model ChamadosIA.Models.Usuario
@{
    ViewData["Title"] = "Atualizar Dados da Conta";
}

<link rel="stylesheet" href="~/css/site.css" />

<style>
    .form-container {
        max-width: 600px;
        margin: 60px auto;
        background: linear-gradient(to right, #6dd5ed, #2193b0);
        border-radius: 12px;
        padding: 40px;
        color: white;
        box-shadow: 0 0 15px rgba(0,0,0,0.4);
    }

    .form-container h2 {
        text-align: center;
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .form-container h4 {
        text-align: center;
        font-weight: 400;
        margin-bottom: 30px;
        opacity: 0.9;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border-radius: 8px;
        border: none;
        font-size: 1rem;
    }

    .btn-group {
        display: flex;
        flex-direction: column;
        gap: 15px;
        margin-top: 20px;
    }

    .btn-action {
        background-color: #00c6ff;
        color: white;
        padding: 12px;
        border: none;
        border-radius: 8px;
        font-weight: bold;
        font-size: 1rem;
        transition: background 0.3s ease;
        text-align: center;
        text-decoration: none;
    }

    .btn-action:hover {
        background-color: #007acc;
    }

    footer {
        margin-top: 30px;
        text-align: center;
        font-size: 0.85rem;
        color: #eee;
    }
</style>

<div class="form-container">
    <h2>üîê Atualizar Conta</h2>
    <h4>Gerencie seus dados de acesso e contato</h4>

    <form asp-action="AtualizarConta" method="post">
        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="Novo e-mail de recupera√ß√£o" />
        </div>
        <div class="form-group">
            <input asp-for="Telefone" class="form-control" placeholder="Novo telefone de contato" />
        </div>
        @if (User.IsInRole("Tecnico"))
        {
            <div class="form-group">
                <input asp-for="Setor" class="form-control" placeholder="Setor de atua√ß√£o" />
            </div>
        }
        <div class="form-group">
            <input asp-for="NovaSenha" class="form-control" placeholder="Nova senha" type="password" />
        </div>
        <div class="form-group">
            <input asp-for="ConfirmarSenha" class="form-control" placeholder="Confirmar nova senha" type="password" />
        </div>

        <div class="btn-group">
            <button type="submit" class="btn-action">üíæ Salvar Altera√ß√µes</button>
            <a href="/Cliente/Dashboard" class="btn-action" style="background-color:#ffd633; color:black;">‚Ü©Ô∏è Voltar ao Dashboard</a>
        </div>
    </form>

    <footer>
        Este site √© seguro e foi desenvolvido pela equipe do CATI.
    </footer>
</div>